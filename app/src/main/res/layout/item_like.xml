<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_like_picture"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rec_transp_10dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/place_image_01" />

    <CheckBox
        android:id="@+id/chb_like_white"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/chb_like_white"
        android:button="@null"
        android:checked="false"
        app:layout_constraintTop_toTopOf="@+id/img_like_picture"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nanum_barun_gothic_regular"
        android:text="(장소)"
        android:textColor="@color/colorSubIcon"
        app:layout_constraintTop_toBottomOf="@+id/img_like_picture"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_like_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:fontFamily="@font/nanum_barun_gothic_regular"
        android:text="글 제목"
        android:textColor="@color/colorTextLight"
        app:layout_constraintTop_toBottomOf="@+id/img_like_picture"
        app:layout_constraintStart_toEndOf="@+id/tv_place" />

    <ImageView
        android:id="@+id/img_star"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/star"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@+id/tv_place"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:fontFamily="@font/nanum_barun_gothic_regular"
        android:text="4.9"
        android:textColor="@color/colorTextLight"
        app:layout_constraintTop_toBottomOf="@+id/tv_place"
        app:layout_constraintStart_toEndOf="@+id/img_star" />
</androidx.constraintlayout.widget.ConstraintLayout>